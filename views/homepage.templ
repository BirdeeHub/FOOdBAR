package views

script htmxAllowedCodes() {
	document.addEventListener("DOMContentLoaded", (event) => {
		document.body.addEventListener("htmx:beforeSwap", function(evt) {
			if (evt.detail.xhr.status === 422) {
				evt.detail.shouldSwap = true;
				evt.detail.isError = false;
			}
		});
	})
}

templ Homepage() {
	<!DOCTYPE html>
	@colorsCSS()
	<html lang="en">
		<head>
			<title>üçú FOOd-BAR</title>
			<meta charset="utf-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1"/>
			<script src="https://unpkg.com/htmx.org/dist/htmx.min.js"></script>
			<link rel="stylesheet" href="/styles/templ.css"/>
		</head>
		<body class="bodycolors">
			@BodyContents("World")
			@htmxAllowedCodes()
		</body>
	</html>
}

templ BodyContents(name string) {
	<div class={ pageContainer() }>
		<div class={ pageHeaderContainer() }>
			Hello, { name }!
		</div>
		<div class={ tabButtonContainer() }>
			tab button 1
			tab button 2
			tab button 3
		</div>
		<div class={ tabContainer() }>
			@tabListDiv(recipe)
		</div>
	</div>
}

type tabtype int

const (
	recipe tabtype = iota
	pantry
	menu
	shopping
	preplist
	earnings
)

templ tabButton(tt tabtype) {
	if (tt == recipe) {
		@tabListDiv(tt)
	} else if (tt == pantry) {
		@tabListDiv(tt)
	}
}

templ tabListDiv(tt tabtype) {
	if (tt == recipe) {
		@recipeList()
	}
}

templ recipeList() {
	<div class={ tabList() }>
		@recipeContainer()
		@recipeContainer()
		@recipeContainer()
	</div>
}

templ recipeContainer() {
	<div class={ tabListItem() }>
			<div class={ listItemElement() }>
				@trashcan()
			</div>
			<div class={ listItemElement() }>
				div soup! üçú
			</div>
			<div class={ listItemElement() }>
				@barsSAVAGE()
			</div>
		</div>
}

