package tabviews

import (
	"fmt"
	"FOOdBAR/views/viewutils"
)

templ PreplistTabContents(td *viewutils.TabData) {
	@viewutils.RenderPointerListWithComponent(td.GetTabItems(), PreplistItemContainer)
}

templ PreplistItemContainer(item *viewutils.TabItem) {
	<div id={ fmt.Sprintf("%s", item.ItemID.String()) } class={ TabListItemCSS() }>
		<div class={ ListItemElementCSS() }>
			{ item.ItemID.String() }
		</div>
		<div class={ ListItemElementCSS() }>
			@viewutils.Trashcan()
		</div>
	</div>
}

templ RenderPreplistTab(td *viewutils.TabData) {
	<div id={ fmt.Sprintf("tabTitle_%s", td.Ttype) } class={ TabHeaderContainerCSS() }>
		<div class={ TabHeaderTitleCSS() }>
			Preplist!
		</div>
		@MaximizeTabButton(td.Ttype)
	</div>
	<div id={ fmt.Sprintf("tabContents_%s", td.Ttype) }>
		@PreplistTabContents(td)
	</div>
}
